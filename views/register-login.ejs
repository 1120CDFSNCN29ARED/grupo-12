<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaoDeportes</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/register-login.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>

<body>
    <header>
        <%- include('./partials/header')  %>
    </header>

    <main>
            <section class="login-form">
                <form action="/" method="GET" >

                    <h1>Login</h1>
                    <p>
                        <label for="user_fullname" class="block-controller">Nombre de usuario</label>
                        <input type="text" name="user-name" id="user-name" placeholder="Nombre de usuario"
                            class="text-input">
                    </p>

                    <p>
                        <label for="email" class="block-controller">e-mail</label>
                        <input type="email" name="email" id="email" placeholder="e-mail" class="text-input">
                    </p>

                    <p class="form-buttons">
                        <input type="submit" class="rs-form" id="submit">
                        <input type="reset" class="rs-form" id="reset">
                    </p>
                </form>
            </section>

            <section class="register-form">
                <form action="/register-login" method="POST" enctype="multipart/form-data">

                    <h1>Crea una cuenta</h1>

                    <p>
                        <label for="user_fullname" class="block-controller">Nombre y apellido</label>
                        <input type="text" name="user_fullname" id="user_fullname" placeholder="Nombre y apellido" class="text-input">
                    </p>

                    <p>
                        <label for="user_email" class="block-controller">E-mail</label>
                        <input type="user_email" name="user_email" id="email02" placeholder="e-mail" class="text-input">
                    </p>
                     <p>
                    <label for="profile_image" class="block-controller">Imagen de perfil</label>
                    <input type="file" name="profile_image" id="profile_image" placeholder="Imagen" class="text-input">
                </p>

                    <p>
                        <label for="user_birthdate" class="block-controller">Fecha de nacimiento</label>
                        <input type="date" name="user_birthdate" id="user_birthdate" class="text-input">
                    </p>


                    <p>
                        <label for="user_adress" class="block-controller">Domicilio</label>
                        <input type="text" name="user_adress" id="user_adress" placeholder="Domicilio" class="text-input">
                    </p>

                    <p>
                        <label for="user_gender_id" class="block-controller">Gender</label>
                        <select name="user_gender_id" id="user_gender_id">
                            <% for(let i = 0; i < genders.length; i++) {%> 
                                <option value="<%= genders[i].id %>">
                                    <%= genders[i].gender_name %>
                                </option>
                            <% } %> 

                        </select>
                    </p>

                    <p>
                        <label for="user_password" class="block-controller">Contraseña</label>
                        <input type="password" name="user_password" id="user_password" class="text-input">
                    </p>


                    <p>
                        <label for="password-check" class="block-controller">Confirmar contraseña</label>
                        <input type="password" name="password-check" id="password-check" class="text-input">
                    </p>

                    <p class="form-buttons">
                        <input type="submit" class="rs-form" id="submit02">
                        <input type="reset" class="rs-form" id="reset02">
                    </p>
                </form>
            </section>
    </main>

    <footer>
        <%- include('./partials/footer')  %> 
    </footer>
</body>

</html>